<div class="flex border h-20 max-w-ms mx-10 space-y-4">
  <% if payment_method.icon.attached? %>
    <div class="w-24 h-20">
      <%= image_tag "#{payment_method.icon.filename}" %>
    </div>
  <% end %>
  <div>
    <div class="px-2 text-blue-900 font-semibold hover:text-blue-800 transition duration-300">
      <%= link_to payment_method.name, admin_payment_method_path(payment_method.id) %>
    </div>
  </div>
</div>