<header class="text-gray-600 body-font border-b-2 border-purple-600 bg-white h-16">
<div class="flex justify-between items-center space-x-7 mt-3">
  <div class="flex title-font font-medium items-center text-gray-900 mb-4 md:mb-0 ml-10">
    <svg class="w-10 h-10 text-white p-2 bg-purple-500 rounded-full" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
      <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
    </svg>
    <%= link_to 'PagaPaga', root_path, class: "ml-3 text-xl text-purple-800 font-semibold hover:text-purple-600 transition duration-300" %>
  </div>

  <div>
    <% if current_user %>
    <div class="md:flex items-center mr-10">
      <%= current_user.email %>
      <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "py-4 px-2 text-gray-500 font-semibold hover:text-purple-800 transition duration-300" %>
      </div>
    <% elsif current_admin %>
      <%= current_admin.email %>
      <%= link_to 'Logout', destroy_admin_session_path, method: :delete, class: "py-4 px-2 text-gray-500 font-semibold hover:text-purple-800 transition duration-300 mr-10" %>
    <% else %>
      <div class="md:flex items-center mr-10">
        <%= link_to 'Cadastre-se', new_user_registration_path, class: "py-4 px-2 text-gray-500 font-semibold hover:text-purple-800 transition duration-300" %>
        <%= link_to 'Entrar', new_user_session_path, class: "py-4 px-2 text-gray-500 font-semibold hover:text-purple-800 transition duration-300" %>
      </div>
    <% end %>
  </div>
</header>