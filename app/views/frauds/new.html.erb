<% if admin_signed_in? && @purchase.status == 'fraud_pending' %>
    <div>
        <div>
            <%= form_with(model: @fraud, url: purchase_frauds_path(@purchase, @fraud)) do |f| %>
                <div>
                    <%= f.label :title %>
                    <% @fraud.errors.full_messages_for(:title).each do |message| %>
                        <div><%= message %></div>
                    <% end %>
                    <%= f.text_field :title %>
                </div>
                <div>
                    <%= f.label :description %>
                    <% @fraud.errors.full_messages_for(:description).each do |message| %>
                        <div><%= message %></div>
                    <% end %>
                    <%= f.text_field :description %>
                </div>
                <div>
                    <%= f.label :file, class: "form-label" %>
                    <%= f.file_field :file, class: "flex " %>

                    <% @fraud.errors.full_messages_for(:file).each do |message| %>
                        <div class="mt-1 text-red-500"><%= message %></div>
                    <% end %>
                </div>
                <%= f.submit 'Enviar constatação de fraude' %>
            <% end %>
        </div>
    </div>
<% else %>
    <div>
        Cobrança já avaliada.
    </div>
<% end %>