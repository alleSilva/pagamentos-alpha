<h2>
  <% if @company.incomplete? %>
    <div class="block text-gray-700 text-sm font-bold ml-5 my-2">
      <%= t '.ask_to_complete_company' %>
    </div>
  <% elsif @company.accepted? %>
    <div class="block text-gray-700 text-sm font-bold ml-5 my-2">
      <%= t '.edit_company_message' %>
    </end>
  <% end %>
</h2>

<% if @company.errors.any? %>
  <ul>
    <% @company.errors.full_messages.each do |error| %>
      <li class="ml-5 mt-1 text-red-500"><%= error %></li>
    <% end %>
  </ul>
<% end %>
<div class="max-w-xs m-5 text-center rounded-lg shadow-md p-4 bg-white border">
  <%= form_for @company, :url => company_path(@company), method: :patch do |f| %>
    <div class="form-m-w-content">
      <div class="mb-4">
        <%= f.label :legal_name, class: "form-label" %>
        <%= f.text_field :legal_name, class: "form-text-field" %>
      </div>
      <div class="mb-4">
        <%= f.label :cnpj, class: "form-label" %>
        <%= f.text_field :cnpj, class: "form-text-field" %>
      </div>
      <div class="mb-4">
        <%= f.label :billing_address, class: "form-label" %>
        <%= f.text_field :billing_address, class: "form-text-field" %>
      </div>
      <div class="mb-4">
        <%= f.label :billing_email, class: "form-label" %>
        <%= f.text_field :billing_email, class: "form-text-field" %>
      </div>
      <%= f.submit t('common.submit'), class: "form-submit-button" %>
    </div>
  <% end %>
</div>