<div class="flex justify-between border lg:w-1/2 max-w-ms mx-10 my-4 rounded-lg overflow-hidden">
  <div class="p-2">
    <% if user_signed_in? %>
      <p class="ml-4 text-purple-900 font-semibold hover:text-purple-800 transition duration-300"">
        <span class="text-gray-700 font-medium">Nome: </span><%= @product.name %>
      </p>
      <p class="ml-4 text-gray-700 font-medium">Status: 
        <% if @product.enabled? %>
          <span class="bg-green-100 text-green-800 text-sm font-medium mr-2 px-2.5 py-0.5 rounded-md"><%= t @product.status %></span>
        <% else %>
          <span class="bg-red-100 text-red-800 text-sm font-medium mr-2 px-2.5 py-0.5 rounded-md"><%= t @product.status %></span>
        <% end %>
      </p>

      <p class="ml-4 text-pink-900 font-medium">
        <span class="text-gray-700 font-medium">Token de integração: </span >
          <%= @product.token %>
      </p>
    <% end %>
  </div>
<div class="mx-5 lg:ml-20 my-auto">
<% if @product.enabled? %>
    <%= link_to 'Desabilitar', disable_product_path, method: :post, class: "bg-white hover:text-red-700 text-red-600 font-bold mb-2 py-2 px-4 border border-red-600 rounded focus:outline-none" %>
<% elsif %>
  <%= link_to 'Habilitar', enable_product_path, method: :post, class: "bg-white hover:text-green-700 text-green-600 font-bold mb-2 py-2 px-4 border border-green-600 rounded focus:outline-none" %>
<% end %>
</div>
  
</div>