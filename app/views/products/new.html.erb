<h3 class="block text-gray-700 text-lg font-medium ml-5 my-2"><%= t('.title') %></h3>
<div class="max-w-xs ml-5 mt-5 text-center rounded-lg shadow-md p-4 bg-white border">
  <%= form_with(model: @product) do |f| %>
    <div class="form-m-w-content">
      <div class="mb-4">
        <%= f.label :name, class: "form-label"%>
        <%= f.text_field :name, class: "form-text-field" %> 
        <% @product.errors.full_messages_for(:name).each do |message| %>
          <div class="mt-1 text-red-600"><%= message %></div>
        <% end %>
      </div>

      <div class="mb-4">
        <%= f.label :type_of, class: "form-label" %>

        <%= 
        f.select :type_of, 
        @product_types_dropdown,
        class: "form-text-field" 
        %>

        <% @product.errors.full_messages_for(:type_of).each do |message| %>
          <div class="mt-1 text-red-600"><%= message %></div>
        <% end %>
      </div>
    
       <%= f.submit 'Criar', class: "form-submit-button" %>
    </div>
  <% end %>
</div>