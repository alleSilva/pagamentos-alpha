<div class="flex justify-between border lg:w-1/2 max-w-ms mx-5 my-4 rounded-lg overflow-hidden">
  <div class="p-2">
    <p class="ml-4 text-purple-900 font-semibold hover:text-purple-800 transition duration-300">
      <span class="text-gray-700 font-medium"><%= Product.human_attribute_name('name') %>: </span><%= link_to product.name, product_path(product.id) %>
    </p>
    <p class="ml-4 text-gray-700 font-medium"><%= Product.human_attribute_name('status') %>: 
    <% if product.enabled? %>
      <span class="bg-green-100 text-green-800 text-sm font-medium mr-2 px-2.5 py-0.5 rounded-md"><%= t product.status %></span>
    <% else %>
      <span class="bg-red-100 text-red-800 text-sm font-medium mr-2 px-2.5 py-0.5 rounded-md"><%= t product.status %></span>
      </p>
    <% end %>

    <p class="ml-4 text-purple-900 font-semibold hover:text-purple-800 transition duration-300">
      <span class="text-gray-700 font-medium"><%= Product.human_attribute_name('type_of') %>: </span><%= t product.type_of %>
    </p>
  </div>
<div class="mx-5 lg:ml-20 my-auto">
  <% if product.enabled? %>
    <%= link_to t('common.disable'), disable_product_path(product.id), method: :post, class: "bg-white hover:text-red-700 text-red-600 font-bold mb-2 py-2 px-4 border border-red-600 rounded focus:outline-none" %>
  <% else %>
    <%= link_to t('common.enable'), enable_product_path(product.id), method: :post, class: "bg-white hover:text-green-700 text-green-600 font-bold mb-2 py-2 px-4 border border-green-600 rounded focus:outline-none" %>
  <% end %>
</div>
  
</div>